<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoFinalDesarrolloMovil.Views.SplashPage"
             BackgroundColor="{DynamicResource Fondo}">

    <Grid>
        <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="20">

            <Label Text="Bienvenido a su Registro de Gastos"
                   FontSize="24"
                   TextColor="{DynamicResource Texto}"
                   HorizontalOptions="Center" />

            <Image Source="splash.jpg"
                WidthRequest="150"
                   HeightRequest="150"
                   HorizontalOptions="Center" />

                <Label Text="Control de Gastos"
                   FontSize="42"
                   TextColor="{DynamicResource Texto}"
                   HorizontalOptions="Center" />
        </VerticalStackLayout>
    </Grid>

</ContentPage>
