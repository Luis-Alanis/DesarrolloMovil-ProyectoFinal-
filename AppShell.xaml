<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ProyectoFinalDesarrolloMovil.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:ProyectoFinalDesarrolloMovil.Views"
    Shell.FlyoutBehavior="Disabled">

    <ShellContent Route="SplashPage"
              ContentTemplate="{DataTemplate views:SplashPage}" />

    <ShellContent Route="LoginPage"
              ContentTemplate="{DataTemplate views:LoginPage}" />


    <ShellContent Title="Inicio" ContentTemplate="{DataTemplate views:MainPage}" Route="MainPage" />
    <ShellContent Title="Agregar Gasto" ContentTemplate="{DataTemplate views:AgregarGastoPage}" Route="AgregarGastoPage" />
    <ShellContent Title="Detalle" ContentTemplate="{DataTemplate views:DetalleGastoPage}" Route="DetalleGastoPage" />
    <ShellContent Title="Ajustes" ContentTemplate="{DataTemplate views:AjustesPage}" Route="AjustesPage" />
    <ShellContent Title="Editar" ContentTemplate="{DataTemplate views:EditarGastoPage}" Route="EditarGastoPage" />

</Shell>
