<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoFinalDesarrolloMovil.Views.DetalleGastoPage"
             Title="DetalleGastoPage"
             BackgroundColor="{DynamicResource Fondo}">

    <VerticalStackLayout Padding="30" Spacing="15">
        <Label Text="{Binding Descripcion}" FontSize="24" FontAttributes="Bold" />
        <Label Text="{Binding Monto, StringFormat='${0:F2}'}" FontSize="18" />
        <Label Text="{Binding Fecha, StringFormat='{0:dd/MM/yyyy}'}" FontSize="16" />

        <Button Text="Editar" Command="{Binding EditarCommand}" />
        <Button Text="Eliminar" Command="{Binding EliminarCommand}" BackgroundColor="DarkRed" TextColor="White" />
    </VerticalStackLayout>

</ContentPage>