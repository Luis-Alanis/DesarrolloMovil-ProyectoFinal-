<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoFinalDesarrolloMovil.Views.LoginPage"
             Title="LoginPage"
             BackgroundColor="{DynamicResource Fondo}">

    <VerticalStackLayout Padding="30" Spacing="20">
        <Label Text="Iniciar Sesión" FontSize="24" TextColor="{DynamicResource Texto}" HorizontalOptions="Center" />

        <Entry Placeholder="Usuario" Text="{Binding Usuario}" />
        <Entry Placeholder="Contraseña" IsPassword="True" Text="{Binding Contrasena}" />

        <Button Text="Ingresar"
                Command="{Binding IniciarSesionCommand}" />
    </VerticalStackLayout>
    
</ContentPage>