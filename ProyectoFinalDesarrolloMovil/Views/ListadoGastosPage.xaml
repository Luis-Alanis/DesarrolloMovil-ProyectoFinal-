<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoFinalDesarrolloMovil.Views.ListadoGastosPage"
             Title="ListadoGastosPage"
             BackgroundColor="{DynamicResource Fondo}">

    <CollectionView ItemsSource="{Binding Gastos}"
                    SelectionMode="Single"
                    SelectionChanged="OnItemSelected">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Frame BorderColor="Gray" Padding="10" Margin="5">
                    <VerticalStackLayout>
                        <Label Text="{Binding Descripcion}" FontAttributes="Bold" />
                        <Label Text="{Binding Monto, StringFormat='${0:F2}'}" />
                        <Label Text="{Binding Fecha, StringFormat='{0:dd/MM/yyyy}'}" FontSize="12" />
                    </VerticalStackLayout>
                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>

    <Button Text="Agregar Gasto"
            VerticalOptions="End"
            Command="{Binding IrAgregarCommand}" />
    
</ContentPage>