<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoFinalDesarrolloMovil.Views.AjustesPage"
             Title="AjustesPage"
             BackgroundColor="{DynamicResource Fondo}"
             >

    <VerticalStackLayout  Padding="20" Spacing="20">
        <Label Text="Ajustes" FontSize="24" TextColor="{DynamicResource Texto}" />

        <Label Text="Tema" TextColor="{DynamicResource Texto}"/>
        <Picker SelectedItem="{Binding TemaSeleccionado}" Title="Selecciona un tema">
            <Picker.ItemsSource>
                <x:Array Type="{x:Type x:String}">
                    <x:String>Claro</x:String>
                    <x:String>Oscuro</x:String>
                </x:Array>
            </Picker.ItemsSource>
        </Picker>
    </VerticalStackLayout>
    
</ContentPage>